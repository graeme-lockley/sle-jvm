-- A cons list declaration with a guard based repeat implementation
type List a =
    Nil
  | Cons a (List a)


repeat : Int -> a -> (List a)
repeat n e
    | n == 0 = Nil
    | otherwise = Cons e (repeat (n - 1) e)


singleton x =
    repeat 1 x
